{
  "manifest_version": 2,
  "name": "AI Website Blocker",
  "description": "Blocks AI websites like ChatGPT, Bard, Claude, etc.",
  "version": "1.0",
  "permissions": [
    "webRequest",
    "webRequestBlocking",
    "<all_urls>"
  ],
  "background": {
    "scripts": ["background.js"],
    "persistent": true
  }
}
